#!/bin/bash

xrandr --output DP-0 --left-of DVI-D-0
xrandr --output HDMI-0 --right-of DVI-D-0
xrandr --output DP-0 --primary
xset dpms $((60 * 20)) $((60 * 30)) $((60 * 45))
xset s off
xset r rate 250 60
setxkbmap -option compose:ralt
hsetroot -solid '#09000F'
nitrogen --restore
wacom-setup inkscape
